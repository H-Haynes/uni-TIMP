.uni-list-item {
  display: flex;
  font-size: 16rpx;
  position: relative;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  flex-direction: row;
}
.uni-list-item--disabled {
  opacity: 0.3;
}
.uni-list-item--hover {
  background-color: #f1f1f1;
}
.uni-list-item__container {
  position: relative;
  display: flex;
  flex-direction: row;
  padding: 12rpx 15px;
  padding-left: 15rpx;
  flex: 1;
  overflow: hidden;
}
.container--right {
  padding-right: 0;
}
.uni-list--border {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
}
.uni-list--border:after {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 1rpx;
  content: "";
  transform: scaleY(0.5);
  background-color: #e5e5e5;
}
.uni-list-item__content {
  display: flex;
  padding-right: 8rpx;
  flex: 1;
  color: #3b4144;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}
.uni-list-item__content--center {
  justify-content: center;
}
.uni-list-item__content-title {
  font-size: 14rpx;
  color: #3b4144;
  overflow: hidden;
}
.uni-list-item__content-note {
  margin-top: 6rpx;
  color: #999;
  font-size: 12rpx;
  overflow: hidden;
}
.uni-list-item__extra {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.uni-list-item__header {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.uni-list-item__icon {
  margin-right: 18rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.uni-list-item__icon-img {
  display: block;
  height: 26rpx;
  width: 26rpx;
  margin-right: 10rpx;
}
.uni-icon-wrapper {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.flex--direction {
  flex-direction: column;
  align-items: initial;
}
.flex--justify {
  justify-content: initial;
}
.uni-list--lg {
  height: 40rpx;
  width: 40rpx;
}
.uni-list--base {
  height: 26rpx;
  width: 26rpx;
}
.uni-list--sm {
  height: 20rpx;
  width: 20rpx;
}
.uni-list-item__extra-text {
  color: #999;
  font-size: 12rpx;
}
.uni-ellipsis-1 {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.uni-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}